<div class="row">
    <div class="col-lg-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Datos del Usuario</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div><!-- /.box -->
        <ul class="list-inline">
            <li>
                <a class="btn btn-default" href="{{ path('fos_user_change_password') }}">
                    <i class="fa fa-key"></i> {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
                </a>
            </li>
        </ul>
    </div>
</div>
